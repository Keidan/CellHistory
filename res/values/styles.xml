<resources xmlns:lib="http://schemas.android.com/apk/res-auto">

    <style name="themeLightBlue" parent="AppBaseThemeLight">
        <item name="android:spinnerItemStyle">@style/spinnerItemStyleBlue</item>
        <item name="labelTextColor">@color/labelColorBlue</item>
        <item name="pagerTitleColor">@color/pagerTitleColorBlue</item>
        <item name="spinnerDropdownColor">@color/spinnerDropdownColorPurple</item>
    </style>
    
    <style name="themeDarkBlue" parent="AppBaseThemeDark">
        <item name="android:spinnerItemStyle">@style/spinnerItemStyleBlue</item>
        <item name="labelTextColor">@color/labelColorBlue</item>
        <item name="pagerTitleColor">@color/pagerTitleColorBlue</item>
        <item name="spinnerDropdownColor">@color/spinnerDropdownColorPurple</item>
    </style>

    <style name="ActionBarStyle" parent="android:style/Widget.Holo.Light.ActionBar">     
      <item name="android:backgroundStacked">#FFFF0000</item> 
      <item name="android:backgroundSplit">#FFFF0000</item>
    </style>

    <style name="spinnerItemStyleBlue" parent="android:Widget.TextView.SpinnerItem">
        <item name="android:textAppearance">@style/textAppearanceSpinnerItemBlue</item>
    </style>

    <style name="textAppearanceSpinnerItemBlue" parent="android:TextAppearance.Widget.TextView.SpinnerItem">
        <item name="android:textColor">@color/labelColorPurple</item>
    </style>
</resources>