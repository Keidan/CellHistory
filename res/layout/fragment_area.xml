<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:lib="http://schemas.android.com/apk/res-auto"
    android:id="@+id/scrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin" >

    <GridLayout
        android:id="@+id/gidLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="3"
        android:paddingTop="10dp" >

        <TextView
            android:id="@+id/lblCurrentArea"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_gravity="start"
            android:layout_marginEnd="5dp"
            android:layout_marginTop="5dp"
            android:layout_row="0"
            android:text="@string/lblCurrentArea"
            android:textColor="?attr/labelTextColor" />

        <TextView
            android:id="@+id/txtCurrentArea"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_columnSpan="2"
            android:layout_gravity="start"
            android:layout_marginTop="5dp"
            android:layout_row="0"
            android:text="@string/empty"
            android:visibility="gone" />

        <TextView
            android:id="@+id/txtCurrentAreaError"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_columnSpan="2"
            android:layout_gravity="start"
            android:layout_marginTop="5dp"
            android:layout_row="0"
            android:text="@string/empty"
            android:visibility="gone" />

        <TextView
            android:id="@+id/lblNextArea"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_gravity="start"
            android:layout_marginEnd="5dp"
            android:layout_marginTop="5dp"
            android:layout_row="1"
            android:text="@string/lblNextArea"
            android:textColor="?attr/labelTextColor" />

        <TextView
            android:id="@+id/txtNextArea"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_columnSpan="2"
            android:layout_gravity="start"
            android:layout_marginTop="5dp"
            android:layout_row="1"
            android:text="@string/empty"
            android:visibility="gone" />

        <TextView
            android:id="@+id/txtNextAreaError"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_columnSpan="2"
            android:layout_gravity="start"
            android:layout_marginTop="5dp"
            android:layout_row="1"
            android:text="@string/empty"
            android:visibility="gone" />

        <TextView
            android:id="@+id/lblNextAreaDistance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_gravity="start"
            android:layout_marginEnd="5dp"
            android:layout_marginTop="5dp"
            android:layout_row="2"
            android:text="@string/lblNextAreaDistance"
            android:textColor="?attr/labelTextColor" />

        <TextView
            android:id="@+id/txtNextAreaDistance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_gravity="start"
            android:layout_marginTop="5dp"
            android:layout_row="2"
            android:text="@string/zero" />

        <TextView
            android:id="@+id/lblUnitM"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="2"
            android:layout_gravity="start"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:layout_row="2"
            android:text="@string/unit_m" />
    </GridLayout>

</ScrollView>