<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:lib="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin" >

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="2"
        android:paddingTop="10dp" >

        <TextView
            android:id="@+id/lblDataConnectivity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_gravity="start"
            android:layout_marginEnd="5dp"
            android:layout_marginTop="5dp"
            android:layout_row="0"
            android:text="@string/lblDataConnectivity"
            android:textColor="?attr/labelTextColor" />

        <TextView
            android:id="@+id/txtDataConnectivity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_gravity="start"
            android:layout_marginTop="5dp"
            android:layout_row="0"
            android:text="@string/empty" />

        <TextView
            android:id="@+id/lblEstimatedSpeed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_gravity="start"
            android:layout_marginEnd="5dp"
            android:layout_marginTop="5dp"
            android:layout_row="1"
            android:text="@string/lblEstimatedSpeed"
            android:textColor="?attr/labelTextColor" />

        <TextView
            android:id="@+id/txtEstimatedSpeed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_gravity="start"
            android:layout_marginTop="5dp"
            android:layout_row="1"
            android:text="@string/empty" />

        <TextView
            android:id="@+id/lblIp4Address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_gravity="start"
            android:layout_marginEnd="5dp"
            android:layout_marginTop="5dp"
            android:layout_row="2"
            android:text="@string/lblIp4Address"
            android:textColor="?attr/labelTextColor" />

        <TextView
            android:id="@+id/txtIp4Address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_gravity="start"
            android:layout_marginTop="5dp"
            android:layout_row="2"
            android:text="@string/empty" />

        <TextView
            android:id="@+id/lblIp6Address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_gravity="start"
            android:layout_marginEnd="5dp"
            android:layout_marginTop="5dp"
            android:layout_row="3"
            android:text="@string/lblIp6Address"
            android:textColor="?attr/labelTextColor" />

        <TextView
            android:id="@+id/txtIp6Address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_gravity="start"
            android:layout_marginTop="5dp"
            android:layout_row="3"
            android:text="@string/empty" />

        <TextView
            android:id="@+id/lblDataActivity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_gravity="start"
            android:layout_marginEnd="5dp"
            android:layout_marginTop="5dp"
            android:layout_row="4"
            android:text="@string/lblDataActivity"
            android:textColor="?attr/labelTextColor" />

        <TextView
            android:id="@+id/txtDataActivity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_gravity="start"
            android:layout_marginTop="5dp"
            android:layout_row="4"
            android:text="@string/empty"/>

        <TextView
            android:id="@+id/lblTxBytesSinceAppStart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_gravity="start"
            android:layout_marginEnd="5dp"
            android:layout_marginTop="5dp"
            android:layout_row="5"
            android:text="@string/lblTxBytesSinceAppStart"
            android:textColor="?attr/labelTextColor" />

        <TextView
            android:id="@+id/txtTxBytesSinceAppStart"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_gravity="start"
            android:layout_marginTop="5dp"
            android:layout_row="5"
            android:text="@string/empty"
            android:textColor="@color/green" />

        <TextView
            android:id="@+id/lblRxBytesSinceAppStart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_gravity="start"
            android:layout_marginEnd="5dp"
            android:layout_marginTop="5dp"
            android:layout_row="6"
            android:text="@string/lblRxBytesSinceAppStart"
            android:textColor="?attr/labelTextColor" />

        <TextView
            android:id="@+id/txtRxBytesSinceAppStart"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_gravity="start"
            android:layout_marginTop="5dp"
            android:layout_row="6"
            android:text="@string/empty"
            android:textColor="@color/red" />
    </GridLayout>

</ScrollView>