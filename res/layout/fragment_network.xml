<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:lib="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin" >

    <LinearLayout
        android:id="@+id/graph"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal"
        android:paddingTop="2dp"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/chartSeparator"
        android:layout_width="fill_parent"
        android:layout_height="3dip"
        android:background="@drawable/line_border"
        android:orientation="horizontal"
        android:visibility="gone" />

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="2"
            android:paddingTop="10dp" >

            <TextView
                android:id="@+id/lblDataConnectivity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_gravity="start"
                android:layout_marginEnd="5dp"
                android:layout_marginTop="5dp"
                android:layout_row="0"
                android:text="@string/lblDataConnectivity"
                android:textColor="?attr/labelTextColor" />

            <TextView
                android:id="@+id/txtDataConnectivity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_gravity="start"
                android:layout_marginTop="5dp"
                android:layout_row="0"
                android:text="@string/empty" />

            <TextView
                android:id="@+id/lblTheoreticalSpeed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_gravity="start"
                android:layout_marginEnd="5dp"
                android:layout_marginTop="5dp"
                android:layout_row="1"
                android:text="@string/lblTheoreticalSpeed"
                android:textColor="?attr/labelTextColor" />

            <TextView
                android:id="@+id/txtTheoreticalSpeed"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_gravity="start"
                android:layout_marginTop="5dp"
                android:layout_row="1"
                android:text="@string/empty" />

            <TextView
                android:id="@+id/lblIp4Address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_gravity="start"
                android:layout_marginEnd="5dp"
                android:layout_marginTop="5dp"
                android:layout_row="2"
                android:text="@string/lblIp4Address"
                android:textColor="?attr/labelTextColor" />

            <TextView
                android:id="@+id/txtIp4Address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_gravity="start"
                android:layout_marginTop="5dp"
                android:layout_row="2"
                android:text="@string/empty" />

            <TextView
                android:id="@+id/lblIp6Address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_gravity="start"
                android:layout_marginEnd="5dp"
                android:layout_marginTop="5dp"
                android:layout_row="3"
                android:text="@string/lblIp6Address"
                android:textColor="?attr/labelTextColor" />

            <TextView
                android:id="@+id/txtIp6Address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_gravity="start"
                android:layout_marginTop="5dp"
                android:layout_row="3"
                android:text="@string/empty" />

            <TextView
                android:id="@+id/lblDataActivity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_gravity="start"
                android:layout_marginEnd="5dp"
                android:layout_marginTop="5dp"
                android:layout_row="4"
                android:text="@string/lblDataActivity"
                android:textColor="?attr/labelTextColor" />

            <TextView
                android:id="@+id/txtDataActivity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_gravity="start"
                android:layout_marginTop="5dp"
                android:layout_row="4"
                android:text="@string/empty" />

            <TextView
                android:id="@+id/lblTxBytesSinceAppStart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_gravity="start"
                android:layout_marginEnd="5dp"
                android:layout_marginTop="5dp"
                android:layout_row="5"
                android:text="@string/lblTxBytesSinceAppStart"
                android:textColor="?attr/labelTextColor" />

            <TextView
                android:id="@+id/txtTxBytesSinceAppStart"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_gravity="start"
                android:layout_marginTop="5dp"
                android:layout_row="5"
                android:text="@string/empty"
                android:textColor="@color/green" />

            <TextView
                android:id="@+id/lblRxBytesSinceAppStart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_gravity="start"
                android:layout_marginEnd="5dp"
                android:layout_marginTop="5dp"
                android:layout_row="6"
                android:text="@string/lblRxBytesSinceAppStart"
                android:textColor="?attr/labelTextColor" />

            <TextView
                android:id="@+id/txtRxBytesSinceAppStart"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_gravity="start"
                android:layout_marginTop="5dp"
                android:layout_row="6"
                android:text="@string/empty"
                android:textColor="@color/red" />
        </GridLayout>
    </ScrollView>

</LinearLayout>