<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:lib="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin" >

    <LinearLayout
        android:id="@+id/graph"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal"
        android:paddingTop="2dp"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/chartSeparator"
        android:layout_width="fill_parent"
        android:layout_height="3dip"
        android:background="@drawable/line_border"
        android:orientation="horizontal"
        android:visibility="gone" />

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="2"
            android:paddingTop="10dp" >

            <TextView
                android:id="@+id/lblOperator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_gravity="start"
                android:layout_marginEnd="5dp"
                android:layout_marginTop="5dp"
                android:layout_row="0"
                android:text="@string/lblOperator"
                android:textColor="#0099cc" />

            <TextView
                android:id="@+id/txtOperator"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_gravity="start"
                android:layout_marginTop="5dp"
                android:layout_row="0"
                android:text="@string/empty" />

            <TextView
                android:id="@+id/lblMCC"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_gravity="start"
                android:layout_marginEnd="5dp"
                android:layout_marginTop="5dp"
                android:layout_row="1"
                android:text="@string/lblMCC"
                android:textColor="#0099cc" />

            <TextView
                android:id="@+id/txtMCC"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_gravity="start"
                android:layout_marginTop="5dp"
                android:layout_row="1"
                android:text="@string/empty" />

            <TextView
                android:id="@+id/lblMNC"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_gravity="start"
                android:layout_marginEnd="5dp"
                android:layout_marginTop="5dp"
                android:layout_row="2"
                android:text="@string/lblMNC"
                android:textColor="#0099cc" />

            <TextView
                android:id="@+id/txtMNC"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_gravity="start"
                android:layout_marginTop="5dp"
                android:layout_row="2"
                android:text="@string/empty" />

            <TextView
                android:id="@+id/lblCellId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_gravity="start"
                android:layout_marginEnd="5dp"
                android:layout_marginTop="5dp"
                android:layout_row="3"
                android:text="@string/lblCellId"
                android:textColor="#0099cc" />

            <TextView
                android:id="@+id/txtCellId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_gravity="start"
                android:layout_marginTop="5dp"
                android:layout_row="3"
                android:text="@string/empty" />

            <TextView
                android:id="@+id/lblLAC"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_gravity="start"
                android:layout_marginEnd="5dp"
                android:layout_marginTop="5dp"
                android:layout_row="4"
                android:text="@string/lblLAC"
                android:textColor="#0099cc" />

            <TextView
                android:id="@+id/txtLAC"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_gravity="start"
                android:layout_marginTop="5dp"
                android:layout_row="4"
                android:text="@string/empty" />

            <TextView
                android:id="@+id/lblPSC"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_gravity="start"
                android:layout_marginEnd="5dp"
                android:layout_marginTop="5dp"
                android:layout_row="5"
                android:text="@string/lblPSC"
                android:textColor="#0099cc" />

            <TextView
                android:id="@+id/txtPSC"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_gravity="start"
                android:layout_marginTop="5dp"
                android:layout_row="5"
                android:text="@string/empty" />

            <TextView
                android:id="@+id/lblType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_gravity="start"
                android:layout_marginEnd="5dp"
                android:layout_marginTop="5dp"
                android:layout_row="6"
                android:text="@string/lblType"
                android:textColor="#0099cc" />

            <TextView
                android:id="@+id/txtType"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_gravity="start"
                android:layout_marginTop="5dp"
                android:layout_row="6"
                android:text="@string/empty" />

            <TextView
                android:id="@+id/lblNetwork"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_gravity="start"
                android:layout_marginEnd="5dp"
                android:layout_marginTop="5dp"
                android:layout_row="7"
                android:text="@string/lblNetwork"
                android:textColor="#0099cc" />

            <TextView
                android:id="@+id/txtNetwork"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_gravity="start"
                android:layout_marginTop="5dp"
                android:layout_row="7"
                android:textColor="@color/green_dark"
                android:text="@string/empty" />

            <TextView
                android:id="@+id/lblASU"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_gravity="start"
                android:layout_marginEnd="5dp"
                android:layout_marginTop="5dp"
                android:layout_row="8"
                android:text="@string/lblASU"
                android:textColor="#0099cc" />

            <TextView
                android:id="@+id/txtASU"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_gravity="start"
                android:layout_marginTop="5dp"
                android:layout_row="8"
                android:text="@string/empty" />

            <TextView
                android:id="@+id/lblLVL"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_gravity="start"
                android:layout_marginEnd="5dp"
                android:layout_marginTop="5dp"
                android:layout_row="9"
                android:text="@string/lblLVL"
                android:textColor="#0099cc" />

            <TextView
                android:id="@+id/txtLVL"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_gravity="start"
                android:layout_marginTop="5dp"
                android:layout_row="9"
                android:text="@string/empty" />

            <TextView
                android:id="@+id/lblSS"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_gravity="start"
                android:layout_marginEnd="5dp"
                android:layout_marginTop="5dp"
                android:layout_row="10"
                android:text="@string/lblSS"
                android:textColor="#0099cc" />

            <TextView
                android:id="@+id/txtSS"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_gravity="start"
                android:layout_marginTop="5dp"
                android:layout_row="10"
                android:text="@string/empty" />
        </GridLayout>
    </ScrollView>

</LinearLayout>